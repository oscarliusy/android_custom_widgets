<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoundBarActivity"
    android:gravity="center"
    android:orientation="vertical">
    <com.spl.custom_widget_learn.customWidget.RoundBarView
        android:id="@+id/round_bar_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:RBVBorderWidth="12dp"
        app:OuterColor="@android:color/holo_blue_dark"
        app:InnerColor="@android:color/holo_red_light"
        android:layout_gravity="center"/>
    <Button
        android:layout_marginTop="20dp"
        android:text="测试"
        android:id="@+id/btn_round_bar_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        app:backgroundTint="@null"/>
</LinearLayout>