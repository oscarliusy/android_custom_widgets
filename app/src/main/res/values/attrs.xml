<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    name 自定义View的名字-->
    <declare-styleable name="MyTextView">
        <!--name:属性名称
            format 格式:
                string 文字        color 颜色
                dimension 宽高，字体大小
                integer 数字       reference 资源（drawable）
                -->
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color"/>
        <attr name="innerColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="stepTextSize" format="dimension"/>
        <attr name="stepTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color"/>
        <attr name="changeColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RoundBarView">
        <attr name="OuterColor" format="color"/>
        <attr name="InnerColor" format="color"/>
        <attr name="RBVBorderWidth" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RatingBarView">
        <attr name="starNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="gradeNumber" format="integer"/>
        <attr name="starSpacing" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LetterSideBarView">
        <attr name="LSBTextSize" format="dimension"/>
        <attr name="LSTTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="MySlidingMenu2">
        <attr name="rightPadding" format="dimension"/>
    </declare-styleable>
</resources>